{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        // Run the preprocessor
        {
            "name": "Face Recognition-Preprocessor",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/src/preprocess.py",
            "console": "integratedTerminal",
            "justMyCode": true,

            "args": [ "--input-dir",
                "Data/lfw",
                "--output-dir",
                "output/intermediate",
                "--crop-dim",
                "180"
            ]
        },

        // Get the Models
        {
            "name": "Face Recognition-GetModel",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/src/getModel.py",
            "console": "integratedTerminal",
            "justMyCode": true,

            "args": ["--model-dir",
                "etc"
            ]
        },

        // LFW Input
        {
            "name": "Face Recognition-LFW",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/src/lfw_input.py",
            "console": "integratedTerminal",
            "justMyCode": true,
        }
    ]
}