    "version": "0.2.0",
    "configurations": [
        // Run the preprocessor
        {
            "name": "Preprocess-Face Recognition",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/src/preprocess.py",
            "console": "integratedTerminal",
            "justMyCode": true,

            "args": [ "--input-dir",
                "Data/lfw",
                "--output-dir",
                "output/intermediate",
                "--crop-dim",
                "180"
            ]
        },

        /* Get the Models
        {
            "name": "GetModel-Face Recognition",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/src/getModel.py",
            "console": "integratedTerminal",
            "justMyCode": true,

            "args": ["--model-dir",
                "etc"
            ]
        },
        */

        // LFW Input
        {
            "name": "LFW-Face Recognition",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/src/lfw_input.py",
            "console": "integratedTerminal",
            "justMyCode": true,
        },

        // Train the Model
        {
            "name": "Train-Face Recognition",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/src/train.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--input-dir",
                "output/intermediate",
                "--model-path",
                "etc/20170511-185253/20170511-185253.pb",
                "--classifier-path",
                "output/classifier.pkl",
                "--num-threads",
                "16",
                "--num-epochs",
                "25",
                "--min-num-images-per-class",
                "10",
                "--is-train"
            ]
        }
    ]
}